<%= form_for [:admin, @article] do |form| %>
  <div class="sect_inner sect_mdl">
    <ul class="contact_form row">
      <li class="contact_item">
        <%= form.label :title, "タイトル", class: :contact_item_label %>
        <%= form.text_field :title, class: :contact_item_input %>
        <p class="contact_item_caution"<% if !@article.errors.messages[:title].empty? %> style="visibility:visible"<% end %>><%= @article.errors.full_messages_for(:title) %></p>
      </li>
      <li class="contact_item">
        <%= form.label :description, "記事内容", class: :contact_item_label %>
        <%= form.text_area :description, class: :contact_item_txt %>
        <p class="contact_item_caution"<% if !@article.errors.messages[:description].empty? %> style="visibility:visible"<% end %>><%= @article.errors.full_messages_for(:description) %></p>
      </li>
    </ul>
    <%= form.submit 'SEND', :class=>"btn_send"%>
  </div>
<% end %>
