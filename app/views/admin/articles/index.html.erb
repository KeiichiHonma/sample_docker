<!-- Wrapper
------------------------------------------>
<div id="wrapper">
  <div class="wrapper_cont">

    <!-- Breadcrumb
    ------------------------------------------>
    <%
      add_breadcrumb "TOP",    root_path
      add_breadcrumb "管理画面TOP",    admin_home_path
      add_breadcrumb "管理画面COLUMN一覧", admin_articles_path
    %>
    <!-- End Breadcrumb
    ------------------------------------------>
    <%= render "breadcrumbs" %>
    <!-- Article
    ------------------------------------------>

    <h1>Admin Columns Page</h1>
    <h2><%= current_user.email %></h2>
    <ul>
      <%= link_to "新規投稿", new_admin_article_path %>
      <% @articles.each do |article| %>
        <li>
          No : <%= article.id %>, date : <%= article.created_at %>, title : <%= article.title %>
          <%= link_to "詳細", admin_article_path(article) %>
          <%= link_to "編集", edit_admin_article_path(article) %>
        </li>
      <% end %>
    </ul>
    <%= paginate @articles %>
    <%= link_to "管理トップへ戻る", admin_home_path %>
    <!-- END Article
    ------------------------------------------>

  </div>
</div>
  <!-- End Wrapper
  ------------------------------------------>
