<div id="wrapper">
  <div class="wrapper_cont">

    <h1>Login</h1>
    <%= form_tag admin_login_path, method: :post do %>
        <div>
           <%= label_tag :email %>
           <%= email_field_tag :email %>
       </div>
       <div>
         <%= label_tag :password %>
         <%= password_field_tag :password %>
      </div>
      <div>
        <%= submit_tag "Login" %>
      </div>

    <% end %>

  </div>
</div>
  <!-- End Wrapper
  ------------------------------------------>
