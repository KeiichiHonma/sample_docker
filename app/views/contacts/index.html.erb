<% provide :title, "お問い合わせ | Sleepdays" %>
<% provide :description, "Sleepdaysに関するご質問を受け付ける法人様向けのページです。商品やサービスなど何かご質問等ございましたらお気軽にこちらからお問合せください。" %>
<% provide :og_type, "website" %>
<% provide :og_title, "お問い合わせ | Sleepdays" %>
<% provide :og_description, "Sleepdaysに関するご質問を受け付ける法人様向けのページです。商品やサービスなど何かご質問等ございましたらお気軽にこちらからお問合せください。" %>
<% provide :og_url, request.url %>
<% provide :twitter_title, "お問い合わせ | Sleepdays" %>
<% provide :twitter_description, "Sleepdaysに関するご質問を受け付ける法人様向けのページです。商品やサービスなど何かご質問等ございましたらお気軽にこちらからお問合せください。" %>
<!-- Wrapper
------------------------------------------>
<div id="wrapper">
  <div class="wrapper_cont">

    <!-- Breadcrumb
    ------------------------------------------>
    <%
      add_breadcrumb "TOP",    root_path
      add_breadcrumb "CONTACT", contacts_path
    %>
    <!-- End Breadcrumb
    ------------------------------------------>
    <%= render "breadcrumbs" %>

    <!-- Contact Form
    ------------------------------------------>
    <div class="bl_s"></div>
    <section class="sect">
      <div class="sect_inner sect_sml ctr">
        <h1 class="heading_nohero fs_8 fw_5">CONTACT</h1>
        <p class="contact_cont">Sleepdaysへのお問い合わせは、下記のフォームをご記入し、<br>内容を確認の上、送信するボタンを押してください。
          <span class="contact_caution">※入力項目はすべて、必須項目です。</span>
        </p>
      </div>

      <%= form_for @contact do |form| %>
        <div class="sect_inner sect_mdl">
          <ul class="contact_form row">
            <li class="contact_item">
              <%= form.label :name, "名前", class: :contact_item_label %>
              <%= form.text_field :name, class: :contact_item_input %>
              <p class="contact_item_caution"<% if !@contact.errors.messages[:name].empty? %> style="visibility:visible"<% end %>>必要事項を入力してください。</p>
            </li>
            <li class="contact_item">
              <%= form.label :company_name, "会社名", class: :contact_item_label %>
              <%= form.text_field :company_name, class: :contact_item_input %>
              <p class="contact_item_caution"<% if !@contact.errors.messages[:company_name].empty? %> style="visibility:visible"<% end %>>必要事項を入力してください。</p>
            </li>
            <li class="contact_item">
              <%= form.label :email, "メールアドレス", class: :contact_item_label %>
              <%= form.text_field :email, class: :contact_item_input, type: :email %>
              <p class="contact_item_caution"<% if !@contact.errors.messages[:email].empty? %> style="visibility:visible"<% end %>>必要事項を入力してください。</p>
            </li>
            <li class="contact_item">
              <%= form.label :telephone, "電話番号", class: :contact_item_label %>
              <%= form.text_field :telephone, class: :contact_item_input, type: :tel %>
              <p class="contact_item_caution"<% if !@contact.errors.messages[:telephone].empty? %> style="visibility:visible"<% end %>>必要事項を入力してください。</p>
            </li>
            <li class="contact_item">

              <%= form.label :address, "住所", class: :contact_item_label %>
              <%= form.text_field :address, class: :contact_item_input %>
              <p class="contact_item_caution"<% if !@contact.errors.messages[:address].empty? %> style="visibility:visible"<% end %>>必要事項を入力してください。</p>
            </li>
            <li class="contact_item">
              <%= form.label :description, "お問い合わせ内容", class: :contact_item_label %>
              <%= form.text_area :description, class: :contact_item_txt %>
              <p class="contact_item_caution"<% if !@contact.errors.messages[:description].empty? %> style="visibility:visible"<% end %>>必要事項を入力してください。</p>
            </li>
          </ul>
          <%= form.submit 'SEND', :class=>"btn_send" %>
        </div>
      <% end %>
    </section>
    <!-- End Contact Form
    ------------------------------------------>

    <%= render "buy_now" %>
    <%= render "column_news" %>
  </div>
</div>
<!-- End Wrapper
------------------------------------------>
