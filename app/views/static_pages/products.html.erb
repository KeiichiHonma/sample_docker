    </section>
    <div class="bl_m"></div>
    <section class="sect">
      <div class="sect_inner ctr">
        <h2 class="heading fs_8 fw_5">RECOVERY AMENITY</h2>
        <ul class="product_all row row_ctr">
          <li class="product_all_col">
            <a href="/products/recovery-room-aroma-mist">
              <div class="product_all_img">
                <%= image_tag("/images/products/rram/product_rram01.png", alt: "Recovery Room Aroma Mist") %>
