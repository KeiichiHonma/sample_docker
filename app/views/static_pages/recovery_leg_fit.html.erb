              <li class="slider_item"><%= image_tag("/images/products/rlf/product_rlf05.png", alt: "Recovery Leg Fit") %></li>
            </ul>
            <button class="product_slider_prev"></button>
            <button class="product_slider_next"></button>
          </div>
