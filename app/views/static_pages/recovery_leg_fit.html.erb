          <a class="btn_arrow btn_more" href="/about#spe">DISCOVER</a>
        </div>
      </div>
    </section>
    <div class="bl_m"></div>
    <section class="sect">
      <div class="sect_inner sect_mdl">
        <div class="product_sgl_feature">
          <div class="feature_item row">
            <div class="feature_item_col feature_txt">
              <h2 class="feature_heading heading fs_7 fw_5">MAKE LEG LINE LOOK BEAUTIFUL</h2>
