            </div>
            <div class="feature_item_col">
              <%= image_tag("/images/products/rmw/feature_rmw02.jpg",class: "feature_img" ) %>
            </div>
          </div>
        </div>
      </div>
    </section>
    <div class="bl_l"></div>
    <section class="sect bg_g">
