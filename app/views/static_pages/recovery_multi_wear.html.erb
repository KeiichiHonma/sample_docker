    <!-- Product Single
    ------------------------------------------>
    <section class="sect">
      <div class="sect_inner sect_mdl">
        <div class="product_sgl row">
          <div class="product_sgl_img">
            <ul class="product_slider">
              <li class="slider_item"><%= image_tag("/images/products/rmw/product_rmw01.png",alt: "Recovery Multi-Wear" ) %></li>
              <li class="slider_item"><%= image_tag("/images/products/rmw/product_rmw02.png",alt: "Recovery Multi-Wear" ) %></li>
              <li class="slider_item"><%= image_tag("/images/products/rmw/product_rmw03.png",alt: "Recovery Multi-Wear" ) %></li>
            </ul>
            <button class="product_slider_prev"></button>
            <button class="product_slider_next"></button>
          </div>
          <div class="product_sgl_cont">
            <h1 class="product_heading heading fs_8 fw_5">Recovery Multi-Wear</h1>
            <p class="product_subheading fw_4">首やお腹、腰などの様々な箇所に活用できるマルチウェア</p>
